{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build csharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/code-tutorials/csharp/csharp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile", 
    },
    {
      "label": "publish csharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/code-tutorials/csharp/csharp.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "dependsOn": "build csharp",
      "problemMatcher": "$msCompile"
    }
  ]
}